    </servlet-mapping>



    <servlet>
        <servlet-name>DeleteProductServlet</servlet-name>
        <servlet-class>servlets.DeleteProductServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DeleteProductServlet</servlet-name>
        <url-pattern>/delitem</url-pattern>
    </servlet-mapping>



    <servlet>
        <servlet-name>ChatPageServlet</servlet-name>
        <servlet-class>servlets.ChatPageServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ChatPageServlet</servlet-name>
        <url-pattern>/chat</url-pattern>
    </servlet-mapping>



    <servlet>
        <servlet-name>SendChatMessageServlet</servlet-name>
        <servlet-class>servlets.SendChatMessageServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SendChatMessageServlet</servlet-name>
        <url-pattern>/sendmessage</url-pattern>
    </servlet-mapping>
</web-app>