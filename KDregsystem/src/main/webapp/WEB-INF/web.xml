        <servlet-name>ProductsMenuPageServlet</servlet-name>
        <servlet-class>servlets.ProductsMenuPageServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ProductsMenuPageServlet</servlet-name>
        <url-pattern>/menu</url-pattern>
    </servlet-mapping>



    <servlet>
        <servlet-name>ItemDetailsPageServlet</servlet-name>
        <servlet-class>servlets.ItemDetailsPageServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ItemDetailsPageServlet</servlet-name>
        <url-pattern>/item</url-pattern>
    </servlet-mapping>



    <servlet>
        <servlet-name>SendOrderServlet</servlet-name>
        <servlet-class>servlets.SendOrderServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SendOrderServlet</servlet-name>
        <url-pattern>/order</url-pattern>
    </servlet-mapping>



    <servlet>
        <servlet-name>OrdersPageServlet</servlet-name>
        <servlet-class>servlets.OrdersPageServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>OrdersPageServlet</servlet-name>
        <url-pattern>/orders</url-pattern>
    </servlet-mapping>



